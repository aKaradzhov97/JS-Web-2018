<div class="container">
    <form action="/addMeme" enctype=multipart/form-data method="POST">
        <label for="movieTitle">Title</label>
        <input type="text" id="movieTitle" name="memeTitle" placeholder="The title of the movie">

        <label for="moviePoster">Poster URL</label>
        <input type="file" id="moviePoster" name="image" placeholder="Link to a poster">

        <input type="checkbox" name='status' id='status' checked> public

        <label for="movieDescription">Movie description</label>
        <textarea id="movieDescription" name="memeDescription" placeholder="Movie description" rows="10"
                  cols="10"></textarea>

        <select name="genres">
            {{#each genres}}
                <option value="{{genreName}}">{{genreName}}</option>
            {{/each}}
        </select>

        <input type="submit" value="Submit">

    </form>
</div>